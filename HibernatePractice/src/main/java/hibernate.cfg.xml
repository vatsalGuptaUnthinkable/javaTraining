<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernatepractical</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">hrhk</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        <mapping class = "org.unthinkable.Student" />
        <mapping class = "org.unthinkable.Student" />
        <mapping class="org.unthinkable.newStudent"  />
    </session-factory>
</hibernate-configuration>